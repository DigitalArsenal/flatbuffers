// Monster schema with encrypted fields for cross-language testing
// Based on official FlatBuffers monster_test.fbs

attribute "encrypted";

namespace CryptoTest;

enum Color:ubyte (bit_flags) {
  Red = 0,
  Green,
  Blue = 3,
}

struct Vec3 {
  x: float;
  y: float;
  z: float;
}

struct EncryptedCoords {
  lat: double;
  lon: double;
}

table Weapon {
  name: string;
  damage: short (encrypted);  // Encrypted weapon damage
}

table Monster {
  // Public fields (not encrypted)
  id: string;
  name: string;
  color: Color = Blue;
  pos: Vec3;
  created_at: uint64;

  // Encrypted fields
  hp: short = 100 (encrypted);
  mana: short = 150 (encrypted);
  secret_location: EncryptedCoords (encrypted);
  inventory: [ubyte] (encrypted);
  secret_notes: string (encrypted);
  damage_multiplier: float (encrypted);
  experience: double (encrypted);
  is_elite: bool (encrypted);

  // Encrypted vectors
  loot_values: [int] (encrypted);
  secret_codes: [ubyte] (encrypted);

  // Nested tables with encrypted fields
  weapons: [Weapon];
}

root_type Monster;
file_identifier "CMON";
file_extension "cmon";
