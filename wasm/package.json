{
  "name": "flatc-wasm",
  "version": "25.12.21",
  "description": "FlatBuffers compiler (flatc) as a WebAssembly module - schema management, JSON/binary conversion, and code generation",
  "type": "module",
  "main": "src/index.mjs",
  "module": "src/index.mjs",
  "types": "src/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "import": "./src/index.mjs",
      "require": "./dist/flatc-wasm.cjs"
    },
    "./runner": {
      "types": "./src/runner.d.ts",
      "import": "./src/runner.mjs"
    },
    "./module": {
      "types": "./dist/flatc-wasm.d.ts",
      "import": "./dist/flatc-wasm.js",
      "require": "./dist/flatc-wasm.cjs"
    }
  },
  "files": [
    "src/index.mjs",
    "src/index.d.ts",
    "src/runner.mjs",
    "src/runner.d.ts",
    "dist/flatc-wasm.js",
    "dist/flatc-wasm.cjs",
    "dist/flatc-wasm.d.ts",
    "README.md"
  ],
  "scripts": {
    "build": "cmake --build ../build/wasm --target flatc_wasm_npm -j",
    "test": "node test/test_all.mjs && node test/test_runner.mjs",
    "prepublishOnly": "npm run build && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/google/flatbuffers.git",
    "directory": "wasm"
  },
  "keywords": [
    "flatbuffers",
    "flatc",
    "wasm",
    "webassembly",
    "serialization",
    "schema",
    "compiler",
    "codegen"
  ],
  "author": "The FlatBuffers project",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/google/flatbuffers/issues"
  },
  "homepage": "https://flatbuffers.dev/",
  "engines": {
    "node": ">=16.0.0"
  }
}
